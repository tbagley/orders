<div class="nav" id="select-{% if route == 'report/contact' %}report{% else %}alert{% endif %}-search-tab">
    <ul class="nav nav-tabs">
        <li class="active"><a href="#{% if route == 'report/contact' %}report{% else %}alert{% endif %}-search-tab" data-toggle="tab">Search</a></li>
        <li class=""><a href="#{% if route == 'report/contact' %}report{% else %}alert{% endif %}-filter-tab" data-toggle="tab">Filter</a></li>
    </ul>
</div>
<form role="form">
    <div class="tab-content">
        <div id="{% if route == 'report/contact' %}report{% else %}alert{% endif %}-filter-tab" class="tab-pane fade in">
            <div class="form-group">
                <label for="select-contact-type-filter">Contact Method:</label><br />
                <div class="btn-group">
                    <button type="button" id="select-contact-type-filter" value="all" class="btn btn-dropdown btn-default btn-sm" data-toggle="dropdown">
                        <span class="filter-label">All</span>
                    </button>
                    <button type="button" class="btn btn-default btn dropdown-toggle btn-sm" data-toggle="dropdown">
                        <span class="caret"></span>
                    </button>
                    <ul class="dropdown-menu" role="menu">
                        <li><a href="#" data-value="all">All</a></li>
                        <li><a href="#" data-value="email">E-Mail</a></li>
                        <li><a href="#" data-value="sms">SMS</a></li>
                    </ul>
                </div>
            </div>

            <div class="form-group">
                <label for="select-contact-group-filter">Contact Group:</label><br />
                <div class="btn-group">
                    <button type="button" id="select-contact-group-filter" value="{{ contact_groups ? 'all' : '' }}" class="btn btn-dropdown btn-default btn-sm {{ contact_groups ? '' : 'disabled' }}" data-toggle="dropdown">
                        <span class="filter-label">{{ contact_groups ? 'All' : 'None' }}</span>
                    </button>
                    <button type="button" class="btn btn-default btn dropdown-toggle btn-sm {{ contact_groups ? '' : 'disabled' }}" data-toggle="dropdown">
                        <span class="caret"></span>
                    </button>
                    <ul class="dropdown-menu" role="menu">
                        <li><a href="#" data-value="all">All</a></li>
                        {% for cg in contact_groups %}
                            <li><a href="#" data-value="{{ cg.contactgroup_id }}">{{ cg.contactgroupname }}</a></li>
                        {% endfor %}
                    </ul>
                </div>
            </div>
        </div>
        <div id="{% if route == 'report/contact' %}report{% else %}alert{% endif %}-search-tab" class="tab-pane fade in active">
            <div class="form-group">
                <label for="text-alert-search">Search:</label>

                <div class="input-group input-group-sm">

                    <input id="text-alert-search" type="text" class="form-control" />
                    <span class="input-group-btn">
                        <button id="alert-search-go" class="btn btn-default" type="button"><span class="glyphicon glyphicon-search"></span></button>
                    </span>
                </div>

            </div>
        </div>
    </div>
</form>