
<div class="nav" id="device-list-search-tab">
    <ul class="nav nav-tabs">
        <li class="active"><a href="#secondary-search-tab" data-toggle="tab">Search</a></li>
        <li class=""><a href="#secondary-filter-tab" data-toggle="tab">Filter</a></li>
    </ul>
</div>
<form role="form">
    <div class="tab-content">
        <div id="secondary-filter-tab" class="tab-pane fade in">
            <div class="form-group">
                <label for="report-type-filter">Report Type:</label><br />
                <div class="btn-group">
                    <button type="button" id="report-type-filter" value="all" class="btn btn-dropdown btn-default btn-sm" data-toggle="dropdown" style="width: 145px; text-align: left;">
                        <span class="filter-label">All</span>
                    </button>
                    <button type="button" class="btn btn-default btn dropdown-toggle btn-sm" data-toggle="dropdown">
                        <span class="caret"></span>
                    </button>
                    <ul class="dropdown-menu" role="menu">
                        <li><a href="#" data-value="all">All</a></li>
                        
                        {% for rt in reporttypes %}
                            <li><a href="#" data-value="{{ rt.reporttype_id }}">{{ rt.reporttypename }}</a></li>
                        {% endfor %}
                        
                    </ul>
                </div>
            </div>
            <div class="form-group">
                <label for="report-generated-filter">Generated By:</label><br />
                <div class="btn-group">
                    <button type="button" id="report-generated-filter" value="all" class="btn btn-dropdown btn-default btn-sm" data-toggle="dropdown" style="width: 145px; text-align: left;">
                        <span class="filter-label">All</span>
                    </button>
                    <button type="button" class="btn btn-default btn dropdown-toggle btn-sm" data-toggle="dropdown">
                        <span class="caret"></span>
                    </button>
                    <ul class="dropdown-menu" role="menu">
                        <li><a href="#" data-value="all">All</a></li>

                        {% for u in users %}
                            <li><a data-value="{{ u.user_id }}">{{ u.fullname }}</a></li>
                        {% else %}
                            <li><a data-value="">No Users Available</a></li>
                        {% endfor %}

                    </ul>
                </div>
            </div>
            <div class="form-group">
                <label for="report-date-filter">Date Range:</label><br />
                <input id="report-date-filter" type="text" class="form-control input-sm has-datepicker" />
            </div>
        </div>
        <div id="secondary-search-tab" class="tab-pane fade in active">
            <div class="form-group">
                <label for="text-reporthistory-search">Search:</label>

                <div class="input-group input-group-sm">

                    <input id="text-reporthistory-search" type="text" class="form-control" />
                    <span class="input-group-btn">
                        <button id="reporthistory-search-go" class="btn btn-default" type="button"><span class="glyphicon glyphicon-search"></span></button>
                    </span>
                </div>
            </div>
        </div>
    </div>
</form>
<hr />