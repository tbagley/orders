
<div class="nav" id="device-list-search-tab">
    <ul class="nav nav-tabs">
        <li class="active"><a href="#device-search-tab" data-toggle="tab">Search</a></li>
        <li class=""><a href="#device-filter-tab" data-toggle="tab">Filter</a></li>
    </ul>
</div>
<form role="form">
    <div class="tab-content">
        <div id="device-filter-tab" class="tab-pane fade in">
            <div class="form-group">
                <label for="vehicle-group-filter">Group:</label><br />
                <div class="btn-group">
                    <button type="button" id="vehicle-group-filter" value="all" class="btn btn-dropdown btn-default btn-sm" data-toggle="dropdown" style="width: 145px; text-align: left;">
                        <span class="filter-label">All</span>
                    </button>
                    <button type="button" class="btn btn-default btn dropdown-toggle btn-sm" data-toggle="dropdown">
                        <span class="caret"></span>
                    </button>
                    <ul class="dropdown-menu" role="menu">
                        <li><a href="#" data-value="all">All</a></li>
                        
                    {% for g in vehicle_groups %}
        				<li><a data-value="{{ g.unitgroup_id }}">{{ g.unitgroupname }}</a></li>
                    {% endfor %}
                    
                    </ul>
                </div>
            </div>
            <div class="form-group">
                <label for="device-status-filter">Status:</label><br />
                <div class="btn-group">
                    <button type="button" id="device-status-filter" value="all" class="btn btn-dropdown btn-default btn-sm" data-toggle="dropdown" style="width: 145px; text-align: left;">
                        <span class="filter-label">All</span>
                    </button>
                    <button type="button" class="btn btn-default btn dropdown-toggle btn-sm" data-toggle="dropdown">
                        <span class="caret"></span>
                    </button>
                    <ul class="dropdown-menu" role="menu">
                        <li><a href="#" data-value="all">All</a></li>
                        {% for d in device_status %}
                        <li><a href="#" data-value="{{ d.unitstatus_id }}">{{ d.unitstatusname }}</a></li>
                        {% endfor %}

                    </ul>
                </div>
            </div>
        </div>
        <div id="device-search-tab" class="tab-pane fade in active">
            <div class="form-group">
                <label for="text-device-search">Search:</label>

                <div class="input-group input-group-sm">

                    <input id="text-device-search" type="text" class="form-control" />
                    <span class="input-group-btn">
                        <button id="device-search-go" class="btn btn-default" type="button"><span class="glyphicon glyphicon-search"></span></button>
                    </span>
                </div>
            </div>
        </div>
    </div>
</form>
<hr />