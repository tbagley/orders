                                  <select class="form-control" id="user-edit-cellcarrier" size="1" onChange="Core.Wizard.SaveChange(this.id);">
                                    {% for carrier in carriers %}
                                      <option value="{{ carrier.cellcarrier_id }}">{{ carrier.cellcarrier }}</option>
                                    {% endfor %}
                                  </select>
                                 </div>
                              </div>

                              <div class="col-md-12 clearfix row">&nbsp;</div> 

                              <div class="form-group col-md-12">
                                 <div class="col-md-2">
                                  <label class="control-label pull-right" for="user-edit-cellnumber" style="margin-top:7px;">Mobile Number (for Txt Msgs):</label>
                                 </div>
                                 <div class="col-md-8">
                                    <input type="text" id="user-edit-cellnumber" name="user-edit-cellnumber" class="form-control" value="[(415) 555-1212]" onChange="Core.Wizard.SaveChange(this.id);">
                                 </div>
                              </div>

                            </div>
                            <!-- END User Details Content -->
                         </div>
                         <!-- END User tab container -->


                         <div class="tab-pane" id="tab-vehicle-group">
                            <div class="row">
                               <div class="col-md-12">
                                 <div class="col-md-4">
                                    <div class="form-group">
                                      <div class="pull-right"><a href="#" class="transfer-select-all">All</a>&nbsp;|&nbsp;<a href="#" class="transfer-select-clear">Clear</a></div>
