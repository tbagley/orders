<!-- USERS TYPE MODALS -->
{% if route == 'users/type' or route == 'admin/usertypes' %}

      		<!-- Add User Type -->      
      		<div id="modal-add-usertype" class="modal fade" tabindex="-1" role="dialog" aria-hidden="true">
            <div class="modal-dialog">
              <div class="modal-content">
                <div class="modal-pronounce">
                  <div class="modal-header">
                      <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                      <h4 class="modal-title clearfix">Add User Type</h4>
                  </div>
                  <div class="modal-body">
                  	<div class="col-md-12">
                      <div class="form-group row">
                        <div class="col-md-2">
                          <label class="control-label pull-right" for="user-type-add-name" style="margin-top:7px;">Name of User Type:</label>
                        </div>
                        <div class="col-md-8">
                          <input type="text" id="user-type-add-name" name="user-type-add-name" class="form-control" placeholder="Create a New User Type...">
                        </div>
                      </div>
                      <div class="col-md-12 clearfix row">&nbsp;</div>
                    </div>
                  </div>
                  <div class="modal-footer">
                      <button id="user-type-add-cancel" type="button" class="btn btn-default pull-left" data-dismiss="modal">Cancel</button>
                      <button id="user-type-add" type="button" class="btn btn-primary create-update pull-right">Save</button>
                  </div>
                </div>
              </div>
            </div>
          </div> 
          <!-- END Add User Type Modal -->
        
        
          <!-- Edit User Type -->      
          <div id="modal-edit-usertype" class="modal fade" tabindex="-1" role="dialog" aria-hidden="true">
          	<div class="modal-dialog">
          		<div class="modal-content">
                <div class="modal-pronounce">
            			<div class="modal-header">
            				<button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
            				<h4 class="modal-title clearfix">Edit User Type</h4>
            			</div>
                  <div class="modal-body">
                    <div class="col-md-12">
                      <div class="form-group">
                        <div class="col-md-2">
                          <label class="control-label pull-right" for="user-type-edit-name" style="margin-top:7px;">Name of User Type:</label>
                        </div>
                        <div class="col-md-8">
                          <input type="text" class="form-control" id="user-type-edit-name" name="user-type-edit-name" onChange="Core.Ajax(this.id,this.value,this.dataset.uid,'updaterefresh');" placeholder="Re-name this User Type..." value="[ABC Impound]">
                        </div>
                      </div>
                    </div>
                    <div class="col-md-12 clearfix row">&nbsp;</div>
                    <div class="col-md-12 permission-list-wrapper">
                      <div class="form-group permission-list-wrapper">
                        <div class="row permission-list-wrapper">
                          <div class="col-md-12 permission-list-wrapper">
                            <div class="col-md-1">
                            </div>
                            <div class="col-md-2 permission-list-wrapper">
                              <div class="form-group permission-list-wrapper">
                                <h4>Website Sections</h4>
                                <div class="permission-list-div">
                                  <ul class="list-group list-permission-groups nav nav-pills nav-stacked">
                                    <li id="Vehicles"><a href="#">1. Vehicles</a></li>
                                    <li id="Landmarks"><a href="#">2. Landmarks</a></li>
                                    <li id="Alerts"><a href="#">3. Alerts</a></li>
                                    <li id="Reports"><a href="#">4. Reports</a></li>
                                    <li id="Admin" class="active"><a href="#">5. Admin</a></li>
                                  </ul>
                                </div>
                              </div>
                            </div>
                            <div class="col-md-1">
                            </div>
                            <div class="col-md-7 permission-list-wrapper">
                              {% for pc in permissioncategory %}
                                <div class="form-group permission-list-wrapper div-permissions-{{ pc.permissioncategoryname }}" style="display:{% if pc.permissioncategoryname == 'Admin' %} block {% else %} none {% endif %};">
                                  <div class="pull-right">&nbsp;&nbsp;</div>
                                  <div class="pull-right"><a href="#" class="permission-toggle-all">All</a>&nbsp;&nbsp;|&nbsp;&nbsp;<a href="#" class="permission-toggle-none">None</a>&nbsp;&nbsp;</div>
                                  <h4 id="permissions-title">Section: {{ pc.permissioncategoryname }}</h4>
                                  <div class="permission-list-div">
                                    <ul id="{{ pc.permissioncategoryname }}-detail-list" class="list-group list-permissions nav nav-stacked">
                                    {% for p in pc.permissions %}
                                      <li id="{{ pc.permissioncategoryname }}-permission-{{ p.permission_id }}">
                                        <a href="#">
                                          <span class="pull-right">
                                            <input id="input-{{ pc.permissioncategoryname }}-permission-{{ p.permission_id }}" type="checkbox" class="user-type-permission" onMouseOver="dblCheck=1;" onMouseOut="dblCheck=0;" />
                                          </span>{{ p.label }}</a>&nbsp;&nbsp;
                                      </li>
                                    {% endfor %}
                                    </ul>
                                  </div>
                                </div>
                              {% endfor %}                                    
                            </div>
                            <div class="col-md-1">
                            </div>
                          </div>
                        </div>
                      </div>
                    </div>
                  </div>
                  <div class="col-md-12 clearfix row">&nbsp;</div>
            		  <div class="modal-footer">
                    <button id="user-type-edit-cancel" type="button" class="btn btn-default pull-right" data-dismiss="modal">Close</button>
                    <!-- <button id="user-type-edit" type="button" class="btn btn-primary create-update pull-right">Save</button> -->
                  </div>
                </div>
              </div>
          	</div>
          </div>  


{% endif %}




