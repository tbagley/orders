
<!-- USERS LIST MODAL -->
{% if route == 'users/list' or route == 'admin/users' %}

        <!-- Add Contact Modal -->
        <div id="modal-add-user" class="modal fade" tabindex="-1" role="dialog" aria-hidden="true">
        	<div class="modal-dialog">
        		<div class="modal-content">
              <div class="modal-pronounce">
          			<div class="modal-header">
          				<button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
          				<h4 class="modal-title">Add User</h4>
          			</div>
          			<div class="modal-body">
          				&nbsp;<br>

                  <div class="col-md-1 pull-right">
                  </div>

                  <div class="col-md-2 pull-right">
                     <div>
                        &nbsp;<p>
                        Once saved, an E-mail containing login credentials will be sent to the New User.<br>
                        &nbsp;<p>
                        <span class="text-danger">Please contact New Users and advise them to check their SPAM folders</span><br>
                        &nbsp;<p>
                        <span class="text-success">For increased <span class="bold">password security</span>
                        please invite the New User to change his or her password upon initial login (by clicking on the user icon located in the top right hand corner).</span></p>
                     </div>
                  </div>

        					<div class="col-md-9 form-group">
        					
                       <div class="col-md-1"></div>
                       <div class="col-md-2">
                        <label class="control-label pull-right" for="user-add-first-name" style="margin-top:7px;">Name:</label>
                       </div>
                       <div class="col-md-4">
                          <input type="text" id="user-add-first-name" name="user-add-first-name" class="form-control" value="[first name]" placeholder="First Name">
                       </div>
                       <div class="col-md-4">
                          <input type="text" id="user-add-last-name" name="user-add-last-name" class="form-control" value="[last name]" placeholder="Last Name">
                       </div>
                       <div class="col-md-1"></div>

                    <div class="col-md-12 clearfix row">&nbsp;</div> 

                       <div class="col-md-1"></div>
                       <div class="col-md-2">
                        <label class="control-label pull-right" for="user-add-username" style="margin-top:7px;">Username:</label>
                       </div>
                       <div class="col-md-8">
                          <input type="text" id="user-add-username" name="user-add-username" class="form-control" value="[username]" placeholder="Username">
                       </div>
                       <div class="col-md-1"></div>

                    <div class="col-md-12 clearfix row">&nbsp;</div> 

                       <div class="col-md-1"></div>
                       <div class="col-md-2">
                        <label class="control-label pull-right" for="user-add-confirm" style="margin-top:7px;">Password:</label>
                       </div>
                       <div class="col-md-4">
                          <input type="password" id="user-add-password" name="user-add-password" class="form-control" value="[password]" placeholder="Password">
                       </div>
                       <div class="col-md-4">
                          <input type="password" id="user-add-confirm" name="user-add-confirm" class="form-control" value="[confirm]" placeholder="Confirm Password">
                       </div>
                       <div class="col-md-1"></div>

                    <div class="col-md-12 clearfix row">&nbsp;</div> 

                      <div class="col-md-1"></div>
                      <div class="col-md-2">
                        <label class="control-label pull-right" for="user-add-user-type" style="margin-top:7px;">User Type:</label>
                      </div>
                      <div class="col-md-8">
                        <select class="form-control" id="user-add-user-type" size="1">
                          {% for usertype in usertypes %}
                            <option value="{{ usertype.usertype_id }}">{{ usertype.usertype }}</option>
                          {% endfor %}
                        </select>
                      </div>
                      <div class="col-md-1"></div>

                    <div class="col-md-12 clearfix row">&nbsp;</div> 

                       <div class="col-md-1"></div>
                       <div class="col-md-2">
                        <label class="control-label pull-right" for="user-add-email" style="margin-top:7px;">E-Mail:</label>
                       </div>
                       <div class="col-md-8">
                          <input type="text" id="user-add-email" name="user-add-email" class="form-control" value="[email@domain.com]" placeholder="Email Address">
                       </div>
                       <div class="col-md-1"></div>

                    <div class="col-md-12 clearfix row">&nbsp;</div> 

                       <div class="col-md-1"></div>
                       <div class="col-md-2">
                        <label class="control-label pull-right" for="user-add-carrier" style="margin-top:7px;">Mobile Number:</label>
                       </div>
                       <div class="col-md-4">
                          <input type="text" id="user-add-mobile-number" name="user-add-mobile-number" class="form-control" value="[(415) 555-1212]" placeholder="Mobile Number">
                       </div>
                       <div class="col-md-4">
                        <select class="form-control" id="user-add-carrier" size="1">
                          {% for carrier in carriers %}
                            <option value="{{ carrier.cellcarrier_id }}">{{ carrier.cellcarrier }}</option>
                          {% endfor %}
                        </select>
                       </div>
                       <div class="col-md-1"></div>

                    <div class="col-md-12 clearfix row">&nbsp;</div> 

                       <div class="col-md-1"></div>
                       <div class="col-md-2">
                        <label class="control-label pull-right" for="user-add-group" style="margin-top:7px;">Vehicle Groups:</label>
                       </div>
                        <div class="col-md-4 pull-left">
                          <div class="transfer-list-div">
                              <ul id="user-add-group" name="user-add-group" class="list-group nav nav-pills nav-stacked transfer-list">
                                {% for groups in vehicle_groups %}
                                    <li id="{{ groups.unitgroup_id }}">
                                      <a href="javascript:void(0);">
                                        <span class="pull-right">
                                          <input id="input-add-user-vehicle-group-{{ groups.unitgroup_id }}" type="checkbox" class="user-type-permission" onMouseOver="dblCheck=1;" onMouseOut="dblCheck=0;" />
                                        </span>
                                        {{ groups.unitgroupname }}
                                      </a>
                                    </li>


                                {% endfor %}
                              </ul>
                          </div>
                        </div>
                       <div class="col-md-5">
                        <label class="control-label pull-left" style="margin-top:4px;"><a href="#" class="transfer-select-all">Select All Groups</a><p><a href="#" class="transfer-select-clear">Clear</a></label>
                       </div>

        					</div> 

          			</div>

                <div class="modal-footer col-md-12 form-group">
                  <div class="col-md-1 pull-right"></div>
                  <div class="col-md-1 pull-right">
                    <button id="user-add" type="button" class="btn btn-primary create-update pull-right">Save</button>
                  </div> 
                  <div class="col-md-1 pull-right"></div>
                  <div class="col-md-1 pull-right">
                    <button id="user-add-cancel" type="button" class="btn btn-default pull-right" data-dismiss="modal">Cancel</button>
                  </div> 
                </div> 

              </div>
            </div>
        	</div>
        </div>
        <!-- END Add Users Modal -->
        
        
