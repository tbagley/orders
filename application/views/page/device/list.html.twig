                                <th style="font-size:14px;">Group</th>
                                <th style="font-size:14px;">Serial</th>
                                <th style="font-size:14px;">VIN</th>
                                <th style="font-size:14px;">Make</th>
                                <th style="font-size:14px;">Model</th>
                                <th style="font-size:14px;">Year</th>
                                <th style="font-size:14px;">Color</th>
                                <th style="font-size:14px;">License Plate</th>
                                <th style="font-size:14px;">Loan Number</th>
                                <th style="font-size:14px;">Device Status</th>
                                <th style="font-size:14px;">Purchase Date</th>
