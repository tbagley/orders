{% extends "layout/layout.html.twig" %}

{% block main_panel %}
    <!-- MAIN-PANEL BEGIN  -->
    
        <div id="fx-container" class="fx-opacity">
            <!-- Page content -->
            <!-- Block Tabs -->
            <div class="block block-tabs full">
                <!-- Block Tabs Title -->
                <div class="block-title">
                    <ul id="secondaryNav" class="nav nav-tabs">
                        {% for item in secondary_navigation %}
                            <li {% if route == item.route  %}class="active"{% endif %}><a href="/{{ item.route }}">{{ item.label }}</a></li>
                        {% endfor %}
                    </ul>
                </div>
                <!-- END Block Tabs Title -->
                <!-- END Block Tabs -->

                <!-- END Table Options -->

                <div>
                    <table>
                        <tr>
                            <td>&nbsp;</td>
                        </tr>
                        <tr>
                            <td class="text-24 text-grey">&nbsp;&nbsp;{{ todays_date }}</td>
                        </tr>
                        <tr>
                            <th>
                                <div class="system-metrics-div">
                                    <table class="system-metrics">
                                        <tr>
                                            <td class="text-18 text-red" colspan="4">Logins: <span class="text-black">{{ logins_total }} <span class="text-10 text-grey">Login Events</span></span></td>
                                        </tr>
                                        <tr>
                                            <td class="text-12 text-grey">Website Url</td>
                                            <td class="text-12 text-grey pull-right">Count</td>
                                            <td class="text-12 text-grey">Percentage</td>
                                            <td class="text-12 text-grey">First&nbsp;Login&nbsp;(UTC)</td>
                                            <td class="text-12 text-grey">Most&nbsp;Recent&nbsp;(UTC)</td>
                                        </tr>
                                    {% for login in logins %}
                                        <tr>
                                            <th><span class="text-12 pull-right">{{ login.url }}</span></th>
                                            <td><span class="pull-right">{{ login.count }}</span></td>
                                            <td><span class="text-10">{{ login.percentage }}%</span></td>
                                            <td><span class="text-10">{{ login.createdate }}</span></td>
                                            <td><span class="text-10">{{ login.updated }}</span></td>
                                        </tr>
                                    {% endfor %}
                                    </table>
                                </div>
                            </th>
                        </tr>
                        <tr>
                            <td>&nbsp;</td>
                        </tr>
                    </table>
                </div>

            <!-- END FX Container -->

        </div>

    <!-- MAIN-PANEL END  -->
{% endblock %}


{% block secondary_panel %}
    <!-- SECONDARY-PANEL BEGIN  -->
        {% include('partial/device-sidebar.html.twig') %}
    <!-- SECONDARY-PANEL END  -->
{% endblock %}


{% block modals %}
    <!-- MODAL BEGIN -->
{#}
        {% include('partial/device-modals.html.twig') %}
{#}
    <!-- MODAL END -->
{% endblock %}


{% block scripts_panel %}
{#}
    <script src="/assets_responsive/js/device.js"></script>
{#}
{% endblock %}